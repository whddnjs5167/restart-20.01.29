#include <stdio.h>

int main()
{
    int n, a, b, i;
    
    scanf("%d", &n);
    
    for(i=0; i<n; i++)
    {
        scanf("%d %d" , &a, &b);
        
        if(a==b)
        {
            if(a%2==1)  printf("%d\n", a+b-1);
            else    printf("%d\n", a+b);
        }
        else if(a-2==b)
        {
            if(a%2==1)  printf("%d\n", a+b-1);
            else printf("%d\n", a+b);
        }
        else    printf("No Number\n");
    }
    
    return 0;
}
